<p id="notice"><%= notice %></p>

<button class='btn btn-primary' id = "new_form">New</button>
<div id="new_model_form" style="display:none;">
  <%= render :partial => "new", :locals => {:designation => Designation.new}%>
</div>

<h1>Designations</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designations.each do |designation| %>
      <tr>
        <td><%= designation.name %></td>
        <td><%= designation.is_active %></td>
        <td><%= link_to 'Edit', edit_designation_path(designation) %></td>
        <td><% link_to 'Destroy', designation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  jQuery(function($) {
  return $(document).ready(function() {
    return $("#new_form").click(function() {
      $("#new_model_form").css("display", "block");
      return $(this).hide();
    });
  });
});
</script>
