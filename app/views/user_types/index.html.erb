<p id="notice"><%= notice %></p>
<button class='btn btn-primary' id='new_form'>New</button>
<div id="new_model_form" style="display:none;">
  <%= render :partial => "new", :locals => {:user_type => UserType.new}%>
</div>

<h1>User Types</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_types.each do |user_type| %>
      <tr>
        <td><%= user_type.name %></td>
        <td><%= link_to 'Edit', edit_user_type_path(user_type) %></td>
        <td><% link_to 'Destroy', user_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

