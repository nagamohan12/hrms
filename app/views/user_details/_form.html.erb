<%= simple_form_for(@user_detail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :gender %>
    <%= f.input :dob %>
    <%= f.input :official_phone %>
    <%= f.input :official_mobile %>
    <%= f.input :fax %>
    <%= f.input :official_email %>
    <%= f.input :pan_no %>
    <%= f.association :blood_group %>
    <%= f.association :department %>
    <%= f.association :designation %>
    <%= f.association :grade %>
    <%= f.association :religion %>
    <%= f.association :user_type %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
