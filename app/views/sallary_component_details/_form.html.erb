<%= simple_form_for @sallary_component_detail do |f| %>
  <div class="add-user-form-contain">
    <div class="fix-title-box">
      <h3 class="section-title">NEW Component</h3>
        <div class = 'row'>
          <div class="col-md-4">
            <%= f.input :name, label: "Component Name" %>
          </div>
          <div class="col-md-4">
              <%= f.input :print_name, label: 'Print Name' %>
          </div>
          <div class="col-md-1">
            <%= f.input :position, label: "Position" %>
          </div>
        </div>
        <div class = 'row'>
          <div class="col-md-4">
            <%= f.input :component_type, as: :select, include_blank: false, collection: Employee::COMPONENTS.map { |g| [g.titleize, g] } %>
          </div>
          <div class="col-md-4">
            <%= f.input :status, as: :select, include_blank: false, collection: %w(active inactive).map { |g| [g.titleize, g] } %>
          </div>
        </div>
        <div class = 'row'>
          <div class="col-md-4">
            <%= f.input :amt_per, as: :select, include_blank: false, collection: %w(amount Percentage).map { |g| [g.titleize, g] }, label: 'Amount/Percentage' %>
          </div>
          <div class="col-md-4">
              <%= f.input :amt_per_value, label: 'Value' %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    </div>
  </div>
<% end %>