<p id="notice"><%= notice %></p>
<button class='btn btn-primary' id = "new_form">New</button>
<div id="new_model_form" style="display:none;">
  <%= render :partial => "new", :locals => {:department => Department.new}%>
</div>

<h1>Departments</h1>

<table  class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.is_active %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><% link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
