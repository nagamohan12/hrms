<p id="notice"><%= notice %></p>
<button class='btn btn-primary' id = "new_form">New</button>
<div id="new_model_form" style="display:none;">
  <%= render :partial => "new", locals: {blood_group: BloodGroup.new}%>
</div>

<h1>Listing Blood Groups</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blood_groups.each do |blood_group| %>
      <tr>
        <td><%= blood_group.name %></td>
        <td><%= blood_group.is_active %></td>
        <td><%= link_to 'Edit', edit_blood_group_path(blood_group) %></td>
        <td><% link_to 'Destroy', blood_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script type="text/javascript">
  jQuery(function($) {
  return $(document).ready(function() {
    return $("#new_form").click(function() {
      $("#new_model_form").css("display", "block");
      return $(this).hide();
    });
  });
});
</script>
