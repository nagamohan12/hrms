<h1>Listing Employees</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Employee Id</th>
      <th>User name</th>
      <th>Email</th>
      <th>User Type</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>
        <td><%= employee.user_name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.user_detail.user_type.name %></td>
        <td><%= link_to 'Sallary Structure', employee_sallary_structure_path(employee.id) %></td>
        <td><%= link_to 'Attendence', attendance_path(employee.id) %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p id="notice"><%= notice %></p>
<button class='btn btn-primary' id = "new_form">New</button>
<div id="new_model_form" style="display:none;">
  <%= render :partial => "new", locals: {employee: Employee.new}%>
</div>
<script type="text/javascript">
  jQuery(function($) {
  return $(document).ready(function() {
    return $("#new_form").click(function() {
      $("#new_model_form").css("display", "block");
      return $(this).hide();
    });
  });
});
</script>

