<p id="notice"><%= notice %></p>

<h1>Listing User Work Details</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Login Time</th>
      <th>Logout Time</th>
      <th>Total time</th>
    </tr>
  </thead>

  <tbody>
  <%total = 0%>
    <% @user_work_details.each do |user_work_detail| %>
      <tr>
        <%total = total+user_work_detail.total_time%>
        <td><%= user_work_detail.login %></td>
        <td><%= user_work_detail.login_time_structure %></td>
        <td><%= user_work_detail.logout_time_structure %></td>
        <td><%= user_work_detail.total_time %></td>
        <td><% link_to 'Show', user_work_detail %></td>
        <td><% link_to 'Edit', edit_user_work_detail_path(user_work_detail) %></td>
        <td><% link_to 'Destroy', user_work_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr></tr>
    <tr>
      <td><%= 'Total'%></td>
      <td></td>
      <td></td>
      <td><%= total.to_f %></td>
    </tr>
  </tbody>
</table>

